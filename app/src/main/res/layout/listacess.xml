<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/White"
    android:layout_height="match_parent">

    <!-- Logo Ahards -->
    <ImageView
        android:id="@+id/logo_ahards"
        android:layout_width="296px"
        android:layout_height="76px"
        android:layout_marginTop="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_ahards" />

    <!-- Botão Arrow: Voltar -->
    <ImageView
        android:id="@+id/arrowmenu"
        android:layout_width="50px"
        android:layout_height="50px"
        android:layout_marginStart="38dp"
        android:layout_marginTop="58dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_ahards"
        app:srcCompat="@drawable/arrow" />

    <!-- Texto: Lista de Acessos -->
    <TextView
        android:id="@+id/menuprincipal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textColor"
        android:fontFamily="@font/axiforma_regular"
        android:text="LISTA DE ACESSOS"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/arrowmenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/arrowmenu" />

    <!-- Botão: Pendente-->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnpendente"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/lato_bold"
        android:text="PENDENTE"
        android:textColor="@color/White"
        android:textSize="10sp"
        app:layout_constraintEnd_toStartOf="@+id/btnsincronizado"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/arrowmenu" />

    <!-- Botão: Sincronizado-->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnsincronizado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="100dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/lato_bold"
        android:text="SINCRONIZADO"
        android:textColor="@color/White"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnpendente"
        app:layout_constraintTop_toBottomOf="@+id/arrowmenu" />

    <!-- Texto: Toal de acessos -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/lato_regular"
        android:text="TOTAL DE ACESSOS: "
        android:textColor="@color/textColor"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnpendente" />

    <!-- Card: Funionário -->
